# ============================================
# Enoki & zkLogin Configuration
# ============================================

# Client-side Enoki API key (safe to expose; used by Dapp Kit)
NEXT_PUBLIC_ENOKI_API_KEY=your_enoki_public_api_key

# Server-side Enoki API key (REQUIRED; keep secret)
# Get this from Enoki Developer Portal (not the public key)
ENOKI_API_KEY=your_enoki_server_api_key

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id

# zkLogin Redirect & Network
ZKLOGIN_REDIRECT_URI=http://localhost:3000/auth/callback
ZKLOGIN_NETWORK=testnet

# ============================================
# Development Only (DO NOT use in production)
# ============================================

# Allow using NEXT_PUBLIC_ENOKI_API_KEY as fallback if ENOKI_API_KEY is not set
# This is ONLY for local development testing
DEV_ZKLOGIN_ALLOW_PUBLIC=false
